<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EventHandlingActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Onclick XMK" />

    <Button
        android:id="@+id/btnChangeImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Anonymous Listener" />

    <ImageView
        android:id="@+id/imgStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_women" />

    <Button
        android:onClick="OpenVeribleActivity"
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Variable as listener" />

    <Button
        android:onClick="OpenCalendar2LunarActivity"
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity as Listener" />

    <Button
        android:onClick="OnpenImagesSlideShowActivity"
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="explicit" />

    <Button
        android:onClick="OpenRunTimeViewActivity"
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View SubClassing" />
</LinearLayout>